        android:layout_marginTop="50dp"
        android:background="#00FA001D"
        android:drawableLeft="@drawable/ic_youtube"
        android:text="Ozuna - el oso del dinero"
        android:textAlignment="textStart"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/btn2"
